<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_debit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/debit_category"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="4dp"
            android:layout_toStartOf="@+id/debit_value"
            android:layout_toEndOf="@+id/debit_imageId"
            android:gravity="center"
            android:textColor="#050000"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="debit_category" />

        <TextView
            android:id="@+id/debit_typeOfValue"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/debit_category"
            android:layout_alignStart="@+id/debit_category"
            android:layout_alignEnd="@+id/debit_category"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="4dp"
            android:gravity="center"
            android:textColor="#050000"
            tools:text="debit_typeOfValue" />

        <TextView
            android:id="@+id/debit_value"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="4dp"
            android:layout_marginTop="30dp"
            android:layout_toStartOf="@+id/textViewCurrency"
            android:gravity="center"
            android:textColor="#050000"
            tools:text="debit_value" />

        <TextView
            android:id="@+id/debit_imageId"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="4dp"
            android:gravity="center"
            android:textColor="#050000"
            android:textSize="16sp"
            android:textStyle="italic"
            tools:text="debit_imageId" />

        <TextView
            android:id="@+id/textViewCurrency"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="4dp"
            android:gravity="center"
            android:text="@string/currency"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>